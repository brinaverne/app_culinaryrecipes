<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_receita"
    android:orientation="vertical"
    android:background="@color/amarelopastel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/delicious_curls"
        android:text="Cadastro de Receita"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/white">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/delicious_curls"
        android:textStyle="bold"
        android:text="TÃ­tulo da Receita:"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="17dp">

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:textColor="@color/black"
        android:background="@color/white"
        android:fontFamily="@font/delicious_curls"
        android:textStyle="bold">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/delicious_curls"
        android:textStyle="bold"
        android:text="Ingredientes:"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="17dp"
        >

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ingredientes"
        android:textColor="@color/black"
        android:background="@color/white"
        android:fontFamily="@font/delicious_curls"
        android:textStyle="bold">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passo a Passo:"
        android:fontFamily="@font/delicious_curls"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="17dp"
        >

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/passos"
        android:background="@color/white"
        android:fontFamily="@font/delicious_curls"
        android:textStyle="bold">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/delicious_curls"
        android:textStyle="bold"
        android:text="Autor da Receita:"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        >

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autor"
        android:background="@color/white"
        android:fontFamily="@font/delicious_curls"
        android:textColor="@color/black"
        android:textStyle="bold">

    </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/delicious_curls"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btntlcadastro">

        </Button>

    </LinearLayout>


</ScrollView>